<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.tal.placesfinder.Fragments.PlacesListFragment"
    android:baselineAligned="true"
    android:background="@color/cardview_dark_background">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/searchview"
            android:layout_width="295dp"
            android:elevation="2dp"
            android:background="@drawable/search_view_border"
            android:layout_height="30dp"
            android:paddingLeft="5dp"
            android:iconifiedByDefault="false"
            android:hint="Search for a place">
        </EditText>

        <ImageButton
            android:id="@+id/search_btn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/searchview"
            android:src="@android:drawable/ic_menu_search"
            android:clickable="true"
            android:background="#2c2222"
            android:tint="#fcfcfc" />

    </RelativeLayout>

    <!--<Button-->
        <!--android:id="@+id/fav_btn"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_toRightOf="@+id/search_btn"-->
        <!--android:text="Settings"/>-->

    <Button
        android:id="@+id/nearby_btn"
        android:layout_width="330dp"
        android:text="Search For Nearby Post office"
        android:textColor="#ffff"
        android:paddingRight="50dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:background="#000000"
        android:drawableRight="@android:drawable/ic_menu_myplaces" />

    <!--<fragment-->
        <!--android:id="@+id/recyclerview"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:paddingTop="5dp"/>-->

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipToRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="5dp" />

    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>

